{% extends 'base.html.twig' %}

{% block body %}


	<div class="container">
		<h1 class="mt-4">Edit un ticket:</h1>

		{% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success">
				{{ flashMessage }}
			</div>
		{% endfor %}


		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.nom_support) }}
			{{ form_widget(form.nom_support) }}
			{{ form_errors(form.nom_support) }}
		</div>
		<div class="form-group">
			{{ form_label(form.nom_demandeur) }}
			{{ form_widget(form.nom_demandeur) }}
			{{ form_errors(form.nom_demandeur) }}
		</div>
		<div class="form-group">
			{{ form_label(form.ticket_message) }}
			{{ form_widget(form.ticket_message) }}
			{{ form_errors(form.ticket_message) }}
		</div>
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}
