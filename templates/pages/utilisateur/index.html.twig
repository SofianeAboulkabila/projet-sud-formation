{% extends 'base.html.twig' %}

{% block title %}Page utilisateurs
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-primary d-flex justify-content-center mt-1 mb-1">Utilisateurs:</h1>

		{% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success">
				{{ flashMessage }}
			</div>
		{% endfor %}

		<a href="{{ path('app_support_user_new') }}" class="btn btn-primary">Nouvel Utilisateur</a>


		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Numéro</th>
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Email</th>
					<th scope="col">Rôle</th>
					<th scope="col">Edition</th>
					<th scope="col">Supression</th>
				</tr>
			</thead>
			<tbody>
				{% for utilisateur in utilisateurs %}
					<tr class="table-secondary">
						<th scope="row">{{ utilisateur.id }}</th>
						<td>{{ utilisateur.nom }}</td>
						<td>{{ utilisateur.prenom }}</td>
						<td>{{ utilisateur.email }}</td>
						<td>{{ utilisateur.role }}</td>
						<td>
							<a href="{{ path('app_support_user_edit', { id: utilisateur.id}) }}" class="btn btn-info">Modifier</a>
						</td>
						<td>
							<a href="{{ path('app_support_user_delete', { id: utilisateur.id}) }}" class="btn btn-warning">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="container d-flex justify-content-center mt-2">
			{{ knp_pagination_render(utilisateurs) }}
		</div>

	{% endblock %}
